---
import {Platform} from "../content/config";
import AppIcon from "./app-icon.astro";
import AppDlButton from "./app-dl-button.astro";
---

<div class="flex justify-center py-20">
  <div class="card">
    <img class="card-image" src="/src/assets/cta.png">
    <div class="card-main backdrop-blur-sm bg-white/60 px-10 w-2/5 flex flex-col justify-center z-10">
      <div class="flex justify-start items-center gap-4">
        <AppIcon class="shrink-0 grow-0" size="80"/>
        <div class="my-shadow">
          <h1 class="text-xl">TurboMK</h1>
          <p class="text-sm">for マリオカート</p>
          <p class="text-sm font-normal">無料でダウンロード！</p>
        </div>
      </div>
      <div class="flex justify-between gap-2 mt-2 h-14 w-full">
        <AppDlButton platform={Platform.iOS}/>
        <AppDlButton platform={Platform.Android}/>
      </div>
    </div>
  </div>
</div>

<style lang="sass">
  .card
    position: relative
    display: flex
    justify-content: end
    width: 90vw
    max-width: 1080px
    height: 380px
    overflow: hidden
    border-radius: 16px
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.17)

    .card-image
      position: absolute
      height: 200%
      width: auto
      left: -100px
      top: -40%
      z-index: 0

    @media (max-width: 960px)
      height: 240px

      .card-image
        position: absolute
        left: -15%
        top: -40%
        width: 130%
        max-width: unset
        height: auto

      .card-main
        width: 100%
        padding: 20px
        display: flex
        flex-direction: column
        justify-content: center
        gap: 20px
        z-index: 1
</style>
