---
import { Image } from "astro:assets";
import type {FeatureItem} from "~/types";

const features: Array<FeatureItem> = [
  {
    title: 'リピック対策にもなる！<br>12レースのレース結果を一気に登録',
    description: 'ラウンジ登録画面では、12レースの順位を登録することができます。<br>', 
    imageUrl: '/src/assets/features/lounge_12_race.png'
  },
  {
    title: '打開でどこまで下がるかわかる！<br>アイテムマップ表示',
    description: '', 
    imageUrl: '/src/assets/features/item_map.png'
  },
  {
    title: '3落ちはどのコース？<br>すぐわかるタイムアタック記録一覧！',
    description: '',
    imageUrl: '/src/assets/features/ta_order_by_time.png'
  },
  {
    title: '最新のWR動画をみながら走れる！<br>毎日WR情報を更新',
    description: '', 
    imageUrl: '/src/assets/features/wr_video.png'
  },
  {
    title: 'VRの変動グラフが楽しい！<br>野良レース結果も登録可能',
    description: '', 
    imageUrl: '/src/assets/features/online_nora.png'
  },
]
---

<div>
  {features.map((item) => (
  <div class="w-full h-lvh flex flex-row-r everse">
    <div class="feature-body w-1/2 py-20 flex flex-col justify-center items-center">
      <h3 set:html={item.title} class="feature-title" />
      <!--<div class="h-2/3 px-8">-->
      <!--  -->
      <!--  &lt;!&ndash;<p class="mt-10" set:html={item.description} />&ndash;&gt;-->
      <!--</div>-->
    </div>
    <figure class="feature-figure flex-shrink w-1/2 flex justify-center items-center">
      <img
        src={item.imageUrl}
        class="feature-image h-2/3 mt-20"
        alt={`A screenshot of ${item.title}`}
      />
    </figure>
  </div>
  ))}
</div>

<style lang="sass">
  .feature-body
    min-width: 600px
    
  .feature-title
    font-size: 2rem
    line-height: 2
    text-align: center
    
  .feature-figure
    background: #465EFF
</style>
